{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/recommended",
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            2
        ],
        "no-multi-spaces": [
            "error"
        ],
        "vue/no-multiple-template-root": "off",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "max-len": [
            "error",
            { "code": 999 }
        ],
        "vue/max-attributes-per-line": ["error", {
            "singleline": {
                "max": 5,
                "allowFirstLine": true
            }
        }]
    }
}